# Shopify
SHOPIFY_SHOP_DOMAIN=demoshop-9631.myshopify.com
SHOPIFY_API_VERSION=2026-01

# Option A: use access token (recommended)
SHOPIFY_ACCESS_TOKEN=shpat_xxx

# Option B: client credentials (if you implemented token fetch)
SHOPIFY_CLIENT_ID=
SHOPIFY_CLIENT_SECRET=

# Netvisor
NETVISOR_BASE_URL=https://isvapi.netvisor.fi
NETVISOR_LANGUAGE=FI
NETVISOR_ORG_ID=
NETVISOR_USE_HTTP_STATUS=1
NETVISOR_MAC_ALGO=HMACSHA256

# Netvisor auth (required only when NETVISOR_MODE=live)
NETVISOR_SENDER=
NETVISOR_PARTNER_ID=
NETVISOR_CUSTOMER_ID=
NETVISOR_TOKEN=
NETVISOR_MAC_KEY=

# Netvisor demo/mock mode
NETVISOR_MODE=mock
NETVISOR_OUT_DIR=./out/netvisor
NETVISOR_DEBUG_AUTH=0

# Netvisor mapping defaults (demo)
NETVISOR_DEFAULT_CUSTOMER_CODE=CASH
NETVISOR_DEFAULT_PAYMENT_TERM=14
NETVISOR_DEFAULT_VAT_PERCENT=25.5
NETVISOR_DEFAULT_VAT_CODE=KOMY
NETVISOR_DEFAULT_PRODUCT_CODE=SHOPIFY_ITEM

# HTTP
HTTP_TIMEOUT=20
HTTP_CONNECT_TIMEOUT=10
HTTP_PROXY=

# State file
STATE_FILE=./state.json